<Window x:Class="ZTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZTP"
        mc:Ignorable="d"
        Icon="GameIcon.ico"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Sorcerer's Path" Height="1080" Width="1920">
    <Grid KeyboardNavigation.DirectionalNavigation="None" Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

        </Grid>

        <StackPanel Grid.Column="0" Margin="10,400,30,40" Orientation="Vertical"  />
        <Canvas Grid.Column="1" Name="myCanvas" Focusable="True" Background="Black" KeyDown="KeyIsDown" KeyUp="KeyIsUp"></Canvas>
    </Grid>
</Window>
